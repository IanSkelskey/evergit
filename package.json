{
    "name": "evergit",
    "version": "0.1.1",
    "description": "A CLI tool for generating commit messages that adhere to the Evergreen ILS project's commit policy.",
    "main": "src/main.ts",
    "bin": {
        "evergit": "dist/main.js"
    },
    "scripts": {
        "start": "node dist/main.js",
        "build": "tsc",
        "format": "prettier --write .",
        "format-check": "prettier --check .",
        "check-unused": "ts-prune -p tsconfig.json",
        "prepare": "npm run build",
        "test": "jest"
    },
    "dependencies": {
        "@types/oauth": "^0.9.6",
        "axios": "^1.7.7",
        "chalk": "^4.1.2",
        "commander": "^9.4.1",
        "inquirer": "^8.0.0",
        "oauth-1.0a": "^2.2.6",
        "open": "^10.1.0",
        "openai": "^4.68.4",
        "readline-sync": "^1.4.10",
        "semver": "^7.6.3",
        "url": "^0.11.4"
    },
    "devDependencies": {
        "@types/axios": "^0.9.36",
        "@types/inquirer": "^9.0.7",
        "@types/jest": "^29.5.14",
        "@types/open": "^6.1.0",
        "@types/readline-sync": "^1.4.8",
        "@types/semver": "^7.5.8",
        "jest": "^29.7.0",
        "prettier": "^3.3.3",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "ts-prune": "^0.10.3",
        "typescript": "^4.6.2"
    },
    "author": "Ian Skelskey <ianskelskey@gmail.com>",
    "license": "MIT"
}
